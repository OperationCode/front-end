{
  "extends": [
    "stylelint-config-standard",
    "stylelint-prettier/recommended"
  ],
  "plugins": [
    "stylelint-prettier"
  ],
  "ignoreFiles": [
    "**/*.js",
    "coverage/**/*",
    "cypress-coverage/**/*",
    "jest-coverage/**/*",
    "node_modules/**/*"
  ],
  "rules": {
    "prettier/prettier": true,
    "color-hex-case": "lower",
    "color-hex-length": "long",
    "indentation": 2,
    "no-duplicate-selectors": true,
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": [
          "composes",
          "composes-with"
        ]
      }
    ],
    "string-quotes": "double",
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": [
          "global"
        ]
      }
    ]
  }
}
